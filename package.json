{
  "name": "arevei-cloud",
  "version": "1.0.0",
  "description": "AREVEI Cloud - local file management dashboard",
  "author": "",
  "license": "MIT",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --external:vite --external:drizzle-kit --bundle --format=cjs --outdir=dist --out-extension:.js=.cjs",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "start": "cross-env NODE_ENV=production node dist/index.cjs",
    "dev:server": "cross-env NODE_ENV=development tsx server/index.ts",
    "dev:electron": "wait-on http://localhost:5000 && electron .",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:electron\"",
    "electron:build": "npm run build && electron-builder --win --x64",
    "electron:build:zip": "npm run build && electron-builder --win --x64 --config.win.target=zip"
  },
  "build": {
    "appId": "com.arevei.cloud",
    "productName": "AREVEI Cloud",
    "files": [
      "dist/**",
      "electron/**",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraFiles": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
